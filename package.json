{
  "name": "veritable-issuer",
  "version": "0.2.4",
  "description": "Front-end for Veritable credentials issuer",
  "author": "Digital Catapult (https://www.digicatapult.org.uk/)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/veritable-issuer.git"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "8.x.x"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "buffer": "^6.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-json-view": "^1.21.3",
    "react-scripts": "^5.0.1"
  },
  "overrides": {
    "flux": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "react-json-view": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "$(npm bin)/eslint src/**/*.js",
    "lint:fix": "$(npm bin)/eslint src/**/*.js --fix",
    "test:integration": "npx cypress run",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-react": "^7.22.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  }
}
